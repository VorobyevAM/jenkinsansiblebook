pipeline {
    parameters {
        string(name: 'HOST')
    }

    agent any

    options{
        ansiColor('xterm')
        timestamps()
    }
    stages {
        stage('Install node_exporter') {
            steps {
                  sh 'ansible-playbook create_user/playbook1.yml -i my_hosts.yml -u root --vault-password-file=create_user/vault_password.txt -e "host=${HOST}"'
            }
        }
    }
}