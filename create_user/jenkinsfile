pipeline {
    parameters {
        string(name: 'HOST')
    }

    agent any

    options{
        ansiColor('xterm')
        timestamps()
    }
    stages {
        stage('Copy ssh public key'){
            steps{
                sh 'sshpass'
            }
        }
        stage('Create user') {
            steps {
                  sh 'ansible-playbook create_user/playbook.yml -i my_hosts.yml -u root --vault-password-file=create_user/vault_password.txt -e "host=${HOST}"'
            }
        }
    }
}