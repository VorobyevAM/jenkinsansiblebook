pipeline {
    parameters {
        string(name: 'HOST')
    }

    agent any

    options{
        ansiColor('xterm')
        timestamps()
    }
    stages {
        stage('Install node_exporter') {
            steps {
                  sh 'ansible-playbook create_user/playbook.yml -i my_hosts.yml --vault-password-file=create_user/pass_phrase.txt --ask-pass -e "host=${HOST}"'
            }
        }
    }
}