pipeline {
    parameters {
        string(name: 'SERVER')
        string(name: 'PORT')
    }

    agent any

    options{
        ansiColor('xterm')
        timestamps()
    }
    stages {
        stage('Get topic list') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'jenkins_cred', keyFileVariable: 'PRIVATE')]) {
                  sh 'ansible-playbook kafka/create_topic.yml -i my_hosts.yml --vault-password-file=kafka/pass_phrase.txt -e "host=${SERVER} SERVER=${SERVER} PORT=${PORT}"'
                }
            }
        }
    }
}